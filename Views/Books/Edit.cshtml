@model Book

@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>
@using (Html.BeginForm("Edit", "Books", FormMethod.Post))
{
    <div class="hidden">
        @Html.Hidden("Id", "default")
    </div>
    <div class="form-group">
        <label for="title">Title:</label>
        @Html.TextBoxFor(book => book.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        @Html.TextBoxFor(book => book.Price, new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        @Html.TextBoxFor(book => book.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="publisher">Publisher:</label>
        @Html.TextBoxFor(book => book.Publisher, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="year">Year:</label>
        @Html.TextBoxFor(book => book.Year, new { @class = "form-control", @type = "number" })
    </div>
    <button type="submit" class="btn btn-default">Save</button>
}