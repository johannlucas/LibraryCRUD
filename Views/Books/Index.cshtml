@model List<Book>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <table class="table table-bordered">
        <thead>
            <tr style="font-size: 18px">
                <th>Title</th>
                <th>Price</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>Year</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
            <tr style="font-size: 18px">
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Author</td>
                <td>@item.Publisher</td>
                <td>@item.Year</td>
                <td>
                    <a href="@Url.Action("Edit", "Books", item)" class="btn btn-info">Edit</a>
                    <a href="@Url.Action("Delete", "Books", item)" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Books")'">New</button>